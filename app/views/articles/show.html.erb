<h1><%=h @article.title %></h1>

<p>
  <%= @article.body %>
</p>

<% if !@article.upload.path.blank? %>
<p>
  <img src="<%=@article.upload.url %>" />
</p>
<% end %>

<% form_for(@article, :html => { :multipart => true } ) do |f| %>
  <%= f.error_messages %>

  <!-- p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p -->
  <%= f.hidden_field :title %>
  <p>
    <%= f.label :body %><br />
    <%= f.text_area :body, :class=>'wymeditor' %>
  </p>
  <p>
    <%= f.label :upload, 'Upload Image' %><br />
    <%= f.file_field :upload %>
  </p>
  <!-- p>
    <%= f.label :published %><br />
    <%= f.check_box :published %>
  </p -->
  <p>
    <%= f.submit 'Update', :class=>'wymupdate' %>
  </p>
<% end %>
