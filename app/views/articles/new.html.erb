<h1>New Article</h1>

<% form_for(@article, :html => { :multipart => true } ) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :body %><br />
    <%= f.text_area :body, :class=>'wymeditor' %>
  </p>
  <p>
    <%= f.label :upload %><br />
    <%= f.file_field :upload %>
  </p>
  <p>
    <%= f.submit 'Create', :class=>'wymupdate' %>
  </p>
<% end %>

<%= link_to 'Back', articles_path %>