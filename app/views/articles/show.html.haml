%h1= h @article.title
- form_for(@article, :html => { :multipart => true } ) do |f|
  = f.error_messages
  = f.hidden_field :title
  #article_input
    = f.label :body, 'Update'
    .data
      = f.text_area :body, :class=>'wymeditor'
      / %p
      /   = f.label :upload, 'Upload Image'
      /   = f.file_field :upload
      %p= f.submit 'Update', :class=>'wymupdate'
%p= @article.body
/ - if @article.upload.path.present?
/   %p
/     %img{ :src => @article.upload.url }
